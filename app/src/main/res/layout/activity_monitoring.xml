<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farrellmochammad.jarkomlan.MonitoringActivity"
    android:background="@drawable/babyedit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="42dp"
            android:textColor="#000000"
            android:text="Monitoring Suara : " />

        <TextView
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="22dp"
            android:text="Monitoring getaran : " />

        <TextView
            android:id="@+id/soundMonitoring"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:textColor="#000000"
            android:text="Device Not Connected" />

        <TextView
            android:id="@+id/vibrationMonitoring"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/soundMonitoring"
            android:layout_alignRight="@+id/soundMonitoring"
            android:layout_alignTop="@+id/textView2"
            android:textColor="#000000"
            android:text="Device Not Connected" />

    </RelativeLayout>

</ScrollView>
